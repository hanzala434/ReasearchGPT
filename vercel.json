{
  "version": 2,
  "builds": [
    {
      "src": "app/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "agent/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
} 